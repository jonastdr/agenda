<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.CadastroActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Nome"
        android:ems="10"
        android:id="@+id/nomeEditText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        style="@style/input"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/telefoneEditText"
        android:layout_below="@+id/nomeEditText"
        android:layout_alignParentStart="true"
        android:hint="Telefone"
        style="@style/input"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Interesses"
        android:id="@+id/preferenciaTextView"
        android:layout_below="@+id/telefoneEditText"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_margin="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/interreseEditText"
        android:layout_below="@+id/preferenciaTextView"
        android:layout_marginTop="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:hint="Palavras chaves"
        style="@style/input"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:id="@+id/salvarButton"
        android:layout_alignTop="@+id/cancelarButton"
        android:layout_alignEnd="@+id/interreseEditText"
        style="@style/submit_button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/cancelarButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        style="@style/cancel_button"/>
</RelativeLayout>
